<Window x:Class="EnergonSoftware.BackpackPlanner.DriveFileExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="MenuFileExit_Click" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox x:Name="listBox" Grid.Row="0"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button Content="Ok" Width="100"></Button>
                <Button Content="Cancel" Width="100"></Button>
            </StackPanel>

        </Grid>
    </DockPanel>
</Window>
