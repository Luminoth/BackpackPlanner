<pages:BasePage
    x:Class="EnergonSoftware.BackpackPlanner.Windows.Pages.FTUEPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:EnergonSoftware.BackpackPlanner.Windows.Pages"
    mc:Ignorable="d">

    <StackPanel Style="{StaticResource BackpackPlannerPage}">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="This is the FTUE page!" />
        <Button x:Uid="FTUESkipButton" Style="{StaticResource BackpackPlannerControl}" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Skip" Click="SkipButton_Click" />
    </StackPanel>
</pages:BasePage>
