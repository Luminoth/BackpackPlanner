<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="googlePlayServices"
        android:title="@string/title_google_play_services">
        <SwitchPreference
            android:key="connectGooglePlayServices"
            android:title="@string/label_google_play_services"
            android:summary="@string/summary_google_play_services"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="personalInformation"
        android:title="@string/title_personal_information">
        <EditTextPreference
            android:key="personalInformationName"
            android:title="@string/label_name"
            android:dialogTitle="@string/title_name"
            android:summary="@string/summary_name"
            android:inputType="text|textCapWords"
            android:defaultValue="" />
        <EditTextPreference
            android:key="personalInformationBirthdate"
            android:title="@string/label_birthdate"
            android:dialogTitle="@string/title_birthdate"
            android:summary="@string/summary_birthdate"
            android:inputType="date"
            android:defaultValue="" />
        <ListPreference
            android:key="personalInformationSex"
            android:title="@string/label_user_sex"
            android:dialogTitle="@string/title_user_sex"
            android:summary="@string/summary_user_sex"
            android:entries="@array/user_sex"
            android:entryValues="@array/user_sex"
            android:defaultValue="Undeclared" />
        <EditTextPreference
            android:key="personalInformationHeight"
            android:title="@string/label_height"
            android:dialogTitle="@string/title_height"
            android:summary="@string/summary_height"
            android:inputType="number"
            android:defaultValue="0" />
        <EditTextPreference
            android:key="personalInformationWeight"
            android:title="@string/label_weight"
            android:dialogTitle="@string/title_weight"
            android:summary="@string/summary_weight"
            android:inputType="number"
            android:defaultValue="0" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="units"
        android:title="@string/title_units">
        <ListPreference
            android:key="unitSystem"
            android:title="@string/label_unit_system"
            android:dialogTitle="@string/title_unit_system"
            android:summary="@string/summary_unit_system"
            android:entries="@array/unit_system"
            android:entryValues="@array/unit_system"
            android:defaultValue="Metric" />
        <ListPreference
            android:key="currency"
            android:title="@string/label_currency"
            android:dialogTitle="@string/title_currency"
            android:summary="@string/summary_currency"
            android:entries="@array/currency"
            android:entryValues="@array/currency"
            android:defaultValue="UnitedStatesDollar" />
    </PreferenceCategory>
</PreferenceScreen>