<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_meal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@color/android:white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/primary">
            <TextView
                android:id="@+id/view_meal_name"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Name" />
            <TextView
                android:id="@+id/view_meal_servings"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 serving(s) of Meal" />
            <TextView
                android:id="@+id/view_meal_weight_per_serving"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 ounces per serving" />
            <TextView
                android:id="@+id/view_meal_calories_per_serving"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 calories per serving" />
            <TextView
                android:id="@+id/view_meal_protein_per_serving"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0g protein per serving" />
            <TextView
                android:id="@+id/view_meal_fiber_per_serving"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0g fiber per serving" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/accent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:id="@+id/view_meal_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 weights" />
            <TextView
                android:id="@+id/view_meal_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 calories per weight" />
            <TextView
                android:id="@+id/view_meal_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$0 ($0 per weights)" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>